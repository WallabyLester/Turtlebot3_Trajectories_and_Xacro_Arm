<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/wiki/xacro" name="twoarm">

<xacro:property name="arm" value="$(find homework2/config/arms.yaml" />
<xacro:property name="dictionary" value="${load_yaml (arm)}" />

<xacro:property name="L1" value="${dictionary['L1']}" />
<xacro:property name="L2" value="${dictionary['L2']}" />
<xacro:property name="R1" value="${dictionary['R1']}" />
<xacro:property name="R2" value="${dictionary['R2']}" />

<link name="base_link" >
    <visual>
    <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
            <cylinder radius="0.1" length="0.1"/>
        </geometry>
        <material name="red_mat">
            <color rgba="1 0 0 0.5" />
        </material>
    </visual>
</link>

<joint name="joint1" type="continuous">
    <axis xyz="0 0 1" />
    <origin xyz="0 0 0.05" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="link1" />
</joint>

<link name="link1">
    <visual>
    <origin xyz="0.75 0 0" rpy="0.8 1.6 0.8" />
        <geometry>
            <cylinder radius="0.1" length="1.5"/>
        </geometry>
        <material name="green_mat">
            <color rgba="0 1 0 1" />
        </material>
    </visual>
</link>

<joint name ="joint2" type="continuous">
    <axis xyz="0 0 1" />
    <origin xyz="1.5 0 0" rpy="0 0 0" />
    <parent link="link1" />
    <child link="link2" />
</joint>

<link name="link2">
    <visual>
    <origin xyz="0.5 0 0" rpy="0 1.6 0" />
        <geometry>
            <cylinder radius="0.1" length="1.0"/>
        </geometry>
        <material name="blue_mat">
            <color rgba="0 0 1 1" />
        </material>
    </visual>
</link> 

<joint name ="joint3" type="fixed">
    <axis xyz="0 0 1" />
    <origin xyz="1.0 0 0" rpy="0 0 0" />
    <parent link="link2" />
    <child link="link3" />
</joint>

<link name="link3">
    <visual>
    <origin xyz="0.5 0 0" rpy="0 1.6 0" />
        <geometry>
            <cylinder radius="0.1" length="0.1"/>
        </geometry>
        <material name="transparent_mat">
            <color rgba="1 1 1 0" />
        </material>
    </visual>
</link> 

</robot>

